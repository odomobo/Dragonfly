<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="Dragonfly.ToolsGui.Views.Dialogs.MessageBoxDialog">
	<StackPanel Orientation="Vertical">
		<TextBlock HorizontalAlignment="Center" Margin="10" Name="Message" Text=""/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Margin="10" Click="Ok_Clicked" Name="OkButton"><TextBlock Name="Ok" Text="Ok"/></Button>
			<Button Margin="10" Click="Cancel_Clicked" Name="CancelButton"><TextBlock Name="Cancel" Text="Cancel"/></Button>
		</StackPanel>
	</StackPanel>
</UserControl>
