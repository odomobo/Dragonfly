<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             x:Class="Dragonfly.ToolsGui.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<dialogHostAvalonia:DialogHostStyles />
    </Application.Styles>
	<Application.Resources>
		<FontFamily x:Key="NunitoFont">avares://Dragonfly.ToolsGui/Assets/Fonts/Nunito-VariableFont_wght.ttf#Nunito</FontFamily>
		<FontFamily x:Key="NotoEmojiFont">avares://Dragonfly.ToolsGui/Assets/Fonts/NotoEmoji-VariableFont_wght.ttf#Noto Emoji</FontFamily>
		<FontFamily x:Key="OpenSansEmojiFont">avares://Dragonfly.ToolsGui/Assets/Fonts/OpenSansEmoji.ttf#OpenSansEmoji</FontFamily>
	</Application.Resources>
</Application>
