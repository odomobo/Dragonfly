             xmlns:views="clr-namespace:Dragonfly.DebugFrontend.Views"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="Dragonfly.DebugFrontend.Views.ChessBoardView"
             x:DataType="vm:ChessBoardViewModel">

	<Design.DataContext>
